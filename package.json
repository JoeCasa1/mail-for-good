{
  "name": "mail-for-good",
  "version": "1.0.0",
  "description": "An open source email server",
  "main": "index.js",
  "engines": {
    "npm": ">=9",
    "node": ">=14.0.0"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "check-env-file": "python ./tools/setup/initial_setup.py",
    "client:lint": "esw webpack.config.* client tools --color",
    "client:clean-dist": "npm run client:remove-dist && mkdir dist",
    "start": "NODE_ENV=production npm-run-all --parallel start:*",
    "start:main": "node server/index.js",
    "start:consumer": "node server/feedback-consumer/consumer.js",
    "production": "DEV_SEND_RATE=200 TEST_PRODUCTION=true NODE_ENV=production node server/index.js",
    "dev": "DEV_SEND_RATE=200 NODE_ENV=development node server/index.js",
    "debug": "DEV_SEND_RATE=200 NODE_ENV=development node --inspect --debug-brk server/index.js",
    "build": "babel-node tools/build.js",
    "simulator": "node ./node_modules/node-amazon-ses-simulator/index.js -e 0",
    "feedback-consumer": "NODE_ENV=production node server/feedback-consumer/index.js",
    "test:server": "npm run test:server:unit && npm run test:server:functional",
    "test:server:unit": "mocha tools/testSetup.js \"server/**/*.spec.js\"",
    "test:server:functional": "babel-tape-runner -r dotenv/config server/tests/**/*.func.js | node_modules/.bin/tap-spec",
    "test:client": "mocha --require tools/testClientSetup.js tools/testSetup.js \"client/**/*.spec.js\"",
    "test": "npm run test:client && npm run test:server",
    "updateDB": "node_modules/.bin/sequelize db:migrate --env production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JoeCasa1/mail-for-good.git"
  },
  "author": "JoeCasa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JoeCasa1/mail-for-good/issues"
  },
  "homepage": "https://github.com/JoeCasa1/mail-for-good#readme",
  "dependencies": {
    "async": "^3.2.4",
    "async.cargo": "^0.5.2",
    "aws-sdk": "^2.1333.0",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.2.3",
    "chalk": "^5.2.0",
    "child_process": "^1.0.2",
    "connect-history-api-fallback": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "csv": "^6.2.8",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fakeredis": "^2.0.0",
    "fs": "^0.0.1-security",
    "geoip-lite": "^1.4.7",
    "helmet": "^6.0.1",
    "html-webpack-plugin": "^5.5.0",
    "http": "^0.0.1-security",
    "jsdom-global": "^3.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "node-mocks-http": "^1.12.1",
    "passport": "^0.6.0",
    "passport-google-oauth": "^2.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-cookie": "^4.1.1",
    "redis": "^4.6.5",
    "shortid": "^2.2.16",
    "slug": "^8.2.2",
    "socket.io": "^4.6.1",
    "sqs-consumer": "^7.0.2",
    "tape": "^5.6.3",
    "ua-parser-js": "^1.0.34",
    "webpack": "^5.76.1"
  },
  "devDependencies": {
    "axios": "^1.3.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "chai": "^4.3.7",
    "node-amazon-ses-simulator": "^1.0.1",
    "webpack-dev-middleware": "^6.0.1",
    "webpack-hot-middleware": "^2.25.3",
    "webpack-md5-hash": "^0.0.6"
  }
}
